{
    // 让 VSCode 打开工程就执行 CMake Configure（生成 compile_commands.json）
    "cmake.configureOnOpen": true,

    // 让 C/C++ 扩展从 CMake 读取真实的编译参数/包含路径
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

    // 指向 CMake 生成的编译数据库（构建过一次后就会存在）
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

    // 兜底的 includePath（有了 compileCommands 一般不需要，但可加速消红线）
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/build/_deps/googletest-src/googletest/include"
    ],

    // 可选：明确使用 gcc 的智能提示模式（WSL/clang 可按需改）
    "C_Cpp.default.intelliSenseMode": "gcc-x64",

    "files.associations": {
        "initializer_list": "cpp",
        "iostream": "cpp",
        "thread": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
